#context-menu
  font-family sans-serif
  position absolute
  padding 3px
  overflow auto
  z-index 90
  border-radius 3px
  background-color white
  box-shadow 0 1px 2px rgba(0, 0, 0, .4), 0 0 1px rgba(0, 0, 0, .2)

  ul
    overflow auto
    padding 0
    margin 0
    text-decoration none

  li
    clear both
    list-style none

  a
    text-decoration none
    overflow auto
    padding 2px 5px
    border-radius 2px
    display block
    cursor pointer

  a:not(.disabled):hover
    background-color $default-cell-border
    background-color var(--cell-border)
    color white

  a.disabled
    opacity 0.4

  li > a.box
    display block
    float left
    width 19px
    height 19px
    line-height 19px
    margin 0
    padding 0
    text-align center
