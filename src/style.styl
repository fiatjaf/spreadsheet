*
  box-sizing border-box

div.row
  -webkit-user-select: none;
  -moz-user-select: none;

  clear both
  width auto
  overflow auto

  div.cell
    float left
    height 1.4em
    font-size 1.2em
    padding 2px 0.2em
    width 4em
    margin 1px

    &:first-child
      clear both

    input
      border none
      outline none

    border 1px solid blue

    &.editing
      border-color green

      input
        width 100%
        height 100%

    &.selected
      border-color pink

    &.range
      background-color: rgba(100, 100, 100, 0.2)
